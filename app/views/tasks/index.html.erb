<ol>
  <% @tasks.each do |task| %>
    <li>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Editer une tâche", edit_task_path(task) %>
        <%= link_to "Supprimer une tâche", destroy_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ol>



